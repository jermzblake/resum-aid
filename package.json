    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@types/jspdf": "^2.0.0",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "hono": "^4.10.7",
    "jspdf": "^3.0.4",
    "mammoth": "^1.11.0",
    "ollama": "^0.6.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "prettier": "^3.7.3",
    "tailwindcss": "^4.1.17",
    "unpdf": "^1.4.0"
  }
}
